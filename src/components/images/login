<script type="text/javascript" src="https://misc.jiuxian.com/m_user/js/user/login.js?v=201801030000"></script>
<script type="text/javascript">
	var u = navigator.userAgent;
	var isApp = u.indexOf('jiuxianApp') > -1;
	if(isApp){
		$(".partnerLogin").hide();
	}
	
	var captchaimgMobileClickCount = 0;
	var captchaimgClickCount = 0;
	var coordinates = "";
	var coordinatesMobile = "";
	
	$(function(){
		$(".pwd input").bind("focus",function(){
            $(this).next().hide();
        });
		$(".identify input").bind("focus",function(){
            $(this).next().hide();
        });
		
		var codeCount = $("#codeCount").val();
		var mobileCodeCount = $("#mobileCodeCount").val();

        $(".content1").hide();
		$(".content2").show();
		
		if(isWeiXin(u)){
			$(".alipay").hide();
		}
		
		// 页面初始状态
		$("#captchaimg1_mobile").attr("src",window.mjava.loginUrl+"/captchaimg1?t="+new Date().getTime());
		var timer = setInterval(function () {
			//判断图片是否加载完成
			var img = document.getElementById("captchaimg1_mobile");
            if (img.complete) {
            	$("#captchaimg1_mobile").show();
                $("#captchaimg2_mobile").attr("src",window.mjava.loginUrl+"/captchaimg2?t="+new Date().getTime());
                clearInterval(timer);
            }
        }, 50);
		
		// 普通登录验证码
		$("#captchaimgChange").bind("click",function(){
			$("#captchaimg1").attr("src",window.mjava.loginUrl+"/captchaimg1?t="+new Date().getTime());
			$("#captchaimg1_success").hide(); 
			$("#captchaimg1").show();
			// 重置点击标记
			for(var i=1;i<=captchaimgClickCount;i++){
        		$(".captchaimgIcon_"+i).css("display","none");
        	}
			for(var i=1;i<=captchaimgMobileClickCount;i++){
        		$(".captchaimgIcon_"+i).css("display","none");
        	}
			captchaimgClickCount = 0;
			coordinates = "";
			var timer = setInterval(function () {
				//判断图片是否加载完成
				var img = document.getElementById("captchaimg1");
	            if (img.complete) {
	                $("#captchaimg2").attr("src",window.mjava.loginUrl+"/captchaimg2?t="+new Date().getTime());
	                clearInterval(timer);
	            }
	        }, 50);
	    });
		
		$("#captchaimg1").bind("click",function (){
			if($("#captchaimg2").css("display")=="inline"){
				$("#captchaimg2").hide(); 
			}else{
				$("#captchaimg2").show(); 
			}
        });
		
		$("#captchaimg2").bind("click",function (){  
			var obj = getMousePos(document.getElementById("vfCode"));
			captchaimgClickCount ++;
			if(captchaimgClickCount >= 3){
				coordinates = coordinates+(obj.x+"_"+obj.y);
			}else{
				coordinates = coordinates+(obj.x+"_"+obj.y)+",";
			}
			$(".captchaimgIcon_"+captchaimgClickCount).css("left",(obj.x-10)+"px");
			$(".captchaimgIcon_"+captchaimgClickCount).css("top",(obj.y-10)+"px");
			$(".captchaimgIcon_"+captchaimgClickCount).css("display","block");
			if(captchaimgClickCount >= 3){
				jQuery.ajax({
		            type:"get",
		            url:"/user/verifyCaptcha.htm?coordinates="+coordinates+"&t="+new Date().getTime(),
		            dataType:"json",
		            success :function(data){
						if("1"==data.success){
							//alert("验证通过");
							$("#captchaimg2").hide(); 
							$("#captchaimg1").hide();
							$("#captchaimg1_success").show(); 
						}else if("0"==data.success){
							//alert("验证失败");
							$("#captchaimgChange").click();
						}else{
							alert(data.success);
							$("#captchaimgChange").click();
						}
		            }
		        });
			}
        });
		
		// ---------------------------------------------- //
		
		// 手机号登录验证码
		$("#captchaimgChange_mobile").bind("click",function(){
			$("#captchaimg1_mobile").attr("src",window.mjava.loginUrl+"/captchaimg1?t="+new Date().getTime());
			$("#captchaimg1_mobile_success").hide();
			$("#captchaimg1_mobile").show();
			// 重置点击标记
			for(var i=1;i<=captchaimgMobileClickCount;i++){
        		$(".captchaimgIcon_"+i).css("display","none");
        	}
			for(var i=1;i<=captchaimgClickCount;i++){
        		$(".captchaimgIcon_"+i).css("display","none");
        	}
			captchaimgMobileClickCount = 0;
			coordinatesMobile = "";
			var timer = setInterval(function () {
				//判断图片是否加载完成
				var img = document.getElementById("captchaimg1_mobile");
	            if (img.complete) {
	                $("#captchaimg2_mobile").attr("src",window.mjava.loginUrl+"/captchaimg2?t="+new Date().getTime());
	                clearInterval(timer);
	            }
	        }, 50);
	    });
		
		$("#captchaimg1_mobile").bind("click",function (){
			if($("#captchaimg2_mobile").css("display")=="inline"){
				$("#captchaimg2_mobile").hide(); 
			}else{
				$("#captchaimg2_mobile").show(); 
			}
        });
		
		$("#captchaimg2_mobile").bind("click",function (){  
			var obj = getMousePos(document.getElementById("vfCode2"));
			captchaimgMobileClickCount ++;
			if(captchaimgMobileClickCount >= 3){
				coordinatesMobile = coordinatesMobile+(obj.x+"_"+obj.y);
			}else{
				coordinatesMobile = coordinatesMobile+(obj.x+"_"+obj.y)+",";
			}
			$(".captchaimgIcon_"+captchaimgMobileClickCount).css("left",(obj.x-10)+"px");
			$(".captchaimgIcon_"+captchaimgMobileClickCount).css("top",(obj.y-10)+"px");
			$(".captchaimgIcon_"+captchaimgMobileClickCount).css("display","block");
			if(captchaimgMobileClickCount >= 3){
				jQuery.ajax({
		            type:"get",
		            url:"/user/verifyCaptcha.htm?coordinates="+coordinatesMobile+"&t="+new Date().getTime(),
		            dataType:"json",
		            success :function(data){
						if("1"==data.success){
							//alert("验证通过");
							$("#captchaimg2_mobile").hide(); 
							$("#captchaimg1_mobile").hide();
							$("#captchaimg1_mobile_success").show(); 
						}else if("0"==data.success){
							//alert("验证失败");
							$("#captchaimgChange_mobile").click();
						}else{
							alert(data.success);
							$("#captchaimgChange_mobile").click();
						}
		            }
		        });
			}
        });
		
		$(".tab1").bind("click",function(){
			$(".tab1").addClass("on");
			$(".tab2").removeClass("on");
			$(".content1").show();
			$(".content2").hide();
			$("#captchaimgChange").click();
			$("#captchaimg1").show();
		});
		$(".tab2").bind("click",function(){
	        $(".tab2").addClass("on");
	        $(".tab1").removeClass("on");
			$(".content2").show();
			$(".content1").hide();
			$("#captchaimgChange_mobile").click();
		});
		// 处理联合登录账号锁定提示信息
		var errmsg = getQueryString("errmsg");
		if(errmsg != null && errmsg == "userLocked"){
			alert("账号已锁定，如有疑问，请联系客服！");
		}
        
	});
	
	function getQueryString(name){
		var queryStringReg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
	    var r = window.location.search.substr(1).match(queryStringReg);
	    if(r!=null)return  unescape(r[2]); return null;
	}
	
	// 获取鼠标点击位置
	function getMousePos(obj) {
        var e = arguments.callee.caller.arguments[0] || window.event;
        var x = e.offsetX;
        var y = e.offsetY;
        return { 'x': x, 'y': y };
    }
	
